{
  "languages": {
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server"
    }
  },
  "formatter": {
    "language_server": {
      "name": "biome"
    }
  },
  "auto_install_extension": {
    "biome":true,
    "html": true
  }
}
